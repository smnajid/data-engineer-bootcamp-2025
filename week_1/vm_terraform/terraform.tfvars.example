# VM Terraform Configuration
# Copy this file to terraform.tfvars and update values

# Project Configuration
project_id = "your-gcp-project-id"
region     = "europe-west6"
zone       = "europe-west6-a"

# VM Configuration
vm_name         = "de-zoomcamp-vm"
vm_machine_type = "e2-standard-4"
vm_disk_size    = 50

# SSH Configuration
ssh_user         = "de-user"
ssh_pub_key_file = "~/.ssh/id_rsa.pub"

# VM State Control (RUNNING or TERMINATED)
vm_desired_status = "RUNNING"

# Labels
environment    = "dev"
project_label  = "de-zoomcamp"